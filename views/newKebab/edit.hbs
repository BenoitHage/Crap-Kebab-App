{{> navbar }}

<span class="centerme">
    <form class="new-form" action="/newKebab/edit/{{kebabs._id}}" method="post">
        <div class="NForm">
            <label for="shopName">Shop name: </label>
            <input type="text" name="shopName" id="shopName" value="{{kebabs.shopName}}">
        </div>
        <div class="NForm">
            <label for="picture">Picture: </label>
            <input type="text" name="picture" id="picture" value="{{kebabs.picture}}">
        </div>
        <div class="NForm">
            <label for="address">Address: </label>
            <input type="text" name="address" id="address" value="{{kebabs.address}}">
        </div>
        <div class="NForm">     
            <label for="coord">Coordinates: </label>
            <input type="number" name="coord" id="coord" value="{{kebabs.coord}}">
        </div>
        <div class="NForm">
            <label for="review">Review: </label>
            <input type="number" name="review" id="review" value="{{kebabs.review}}">
        </div>
        <div class="NForm">
            <label for="title">Title: </label>
            <input type="text" name="title" id="reviewTitle"><br>
        </div>
        <div class="NForm">
            <textarea id="reviewBody" name="body" rows="4" cols="50">Enter your review here: </textarea>
        </div>
    </form>   
    <button class="button" type="submit">Add modifications</button>
    <a class="button" href="/newKebab">Main</a> 
</span>


