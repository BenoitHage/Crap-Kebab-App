<h1>Kebab shop page</h1>
{{#each kebab}}
<h3><a href="/newKebab/{{_id}}">{{shopName}}</a></h3>

<h4>
    <img src="{{picture}}" alt="Kebab image"><br>
    {{review}}<br>
    {{address}}<br>
    {{coord}}<br>
    {{#each comments}}
    {{title}}<br>
    {{body}}<br>
    {{date}}<br>
    {{/each}}
    <input value="{{address}}">
</h4>

<div id="map" style='width: 500px; height: 500px;'></div>

<form action="/newKebab/{{_id}}/delete" method="POST">
    <button type="submit">Delete</button>
</form>

<form runat="server" action="/newKebab/edit/{{_id}}" method="GET">
    <button type="submit">Edit</button>
</form>
<br>
<br>
{{/each}}

<a href="/newKebab/new">Add a kebab shop</a><br>
<a href="/profile">Back to main page</a>

<script>
    let addresses = []
    document.querySelectorAll("input").forEach(elem => {
        addresses.push(elem.value)
    })
</script>